<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_green_app">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_user_header"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/test"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/white"
        android:layout_margin="20dp"
        />

    <TextView
        android:id="@+id/nick_user_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fdgdgdf"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/image_user_header"
        app:layout_constraintTop_toBottomOf="@+id/image_user_header" />

</androidx.constraintlayout.widget.ConstraintLayout>